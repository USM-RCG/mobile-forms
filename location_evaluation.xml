<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>Location Evaluation</h:title>
    <model>
      <instance>
        <data id="location_evaluation" version="201801">
          <meta>
            <instanceID/>
          </meta>
          <collectionDateTime/>
          <entityUuid/>
          <entityExtId/>
          <fieldWorkerUuid/>
          <fieldWorkerExtId/>
          <evaluation/>
          <consent>census nets</consent>
        </data>
      </instance>
      <itext>
        <translation default="true()" lang="Español">
          <text id="/data/fieldWorkerExtId:label">
            <value>Encuestador</value>
          </text>
          <text id="/data/collectionDateTime:label">
            <value>Fecha de Colección</value>
          </text>
          <text id="/data/entityExtId:label">
            <value>Domicilio</value>
          </text>
          <text id="/data/evaluation:label">
            <value>Evaluación</value>
          </text>
          <text id="/data/evaluation:notfound">
            <value>No se puede encontrar el domicilio</value>
          </text>
          <text id="/data/evaluation:destroyed">
            <value>El domicilio fue destruido</value>
          </text>
          <text id="/data/evaluation:uninhabited">
            <value>El domicilio está deshabitado</value>
          </text>
          <text id="/data/evaluation:unavailable">
            <value>Los miembros del domicilio no están disponibles</value>
          </text>
          <text id="/data/evaluation:consent">
            <value>Consentido para actividades</value>
          </text>
          <text id="/data/evaluation:refused">
            <value>Todas las actividades fueron rechazadas</value>
          </text>
          <text id="/data/consent:label">
            <value>Actividades autorizadas</value>
          </text>
          <text id="/data/consent:hint">
            <value>Por favor, seleccione todas las actividades consentidas.</value>
          </text>
          <text id="/data/consent:census">
            <value>Censo</value>
          </text>
          <text id="/data/consent:biometrics">
            <value>Biometría (huellas dactilares)</value>
          </text>
          <text id="/data/consent:nets">
            <value>Telas mosquiteras</value>
          </text>
        </translation>
        <translation lang="English">
          <text id="/data/fieldWorkerExtId:label">
            <value>Field Worker</value>
          </text>
          <text id="/data/collectionDateTime:label">
            <value>Collected Date Time</value>
          </text>
          <text id="/data/entityExtId:label">
            <value>Location</value>
          </text>
          <text id="/data/evaluation:label">
            <value>Evaluation</value>
          </text>
          <text id="/data/evaluation:notfound">
            <value>Unable to find location</value>
          </text>
          <text id="/data/evaluation:destroyed">
            <value>The location was destroyed</value>
          </text>
          <text id="/data/evaluation:uninhabited">
            <value>The location is uninhabited</value>
          </text>
          <text id="/data/evaluation:unavailable">
            <value>Members of the household are unavailable</value>
          </text>
          <text id="/data/evaluation:consent">
            <value>Consented to activities</value>
          </text>
          <text id="/data/evaluation:refused">
            <value>All activities were refused</value>
          </text>
          <text id="/data/consent:label">
            <value>Consented activities</value>
          </text>
          <text id="/data/consent:hint">
            <value>Please select all activities the household consented to.</value>
          </text>
          <text id="/data/consent:census">
            <value>Census</value>
          </text>
          <text id="/data/consent:biometrics">
            <value>Biometrics (fingerprints)</value>
          </text>
          <text id="/data/consent:nets">
            <value>Bed nets</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
      <bind nodeset="/data/fieldWorkerExtId" type="string" readonly="true()"/>
      <bind nodeset="/data/entityExtId" type="string" readonly="true()"/>
      <bind nodeset="/data/collectionDateTime" type="datetime" readonly="true()"/>
      <bind nodeset="/data/evaluation" type="select1" required="true()"/>
      <bind nodeset="/data/consent" type="select" required="true()" relevant="selected(/data/evaluation, 'consent')"/>
    </model>
  </h:head>
  <h:body>
    <group appearance="field-list">
      <input ref="/data/fieldWorkerExtId">
        <label ref="jr:itext('/data/fieldWorkerExtId:label')"/>
      </input>
      <input ref="/data/entityExtId">
        <label ref="jr:itext('/data/entityExtId:label')"/>
      </input>
      <input ref="/data/collectionDateTime">
        <label ref="jr:itext('/data/collectionDateTime:label')"/>
      </input>
    </group>
    <select1 ref="/data/evaluation">
      <label ref="jr:itext('/data/evaluation:label')"/>
      <item>
        <label ref="jr:itext('/data/evaluation:notfound')"/>
        <value>notfound</value>
      </item>
      <item>
        <label ref="jr:itext('/data/evaluation:destroyed')"/>
        <value>destroyed</value>
      </item>
      <item>
        <label ref="jr:itext('/data/evaluation:uninhabited')"/>
        <value>uninhabited</value>
      </item>
      <item>
        <label ref="jr:itext('/data/evaluation:unavailable')"/>
        <value>unavailable</value>
      </item>
      <item>
        <label ref="jr:itext('/data/evaluation:refused')"/>
        <value>refused</value>
      </item>
      <item>
        <label ref="jr:itext('/data/evaluation:consent')"/>
        <value>consent</value>
      </item>
    </select1>
    <select ref="/data/consent">
      <label ref="jr:itext('/data/consent:label')"/>
      <hint ref="jr:itext('/data/consent:hint')"/>
      <item>
        <label ref="jr:itext('/data/consent:census')"/>
        <value>census</value>
      </item>
      <item>
        <label ref="jr:itext('/data/consent:nets')"/>
        <value>nets</value>
      </item>
      <item>
        <label ref="jr:itext('/data/consent:biometrics')"/>
        <value>biometrics</value>
      </item>
    </select>
  </h:body>
</h:html>
