<h:html xmlns="http://www.w3.org/2002/xforms"
        xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns:ev="http://www.w3.org/2001/xml-events"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:jr="http://openrosa.org/javarosa">
    <h:head>
        <h:title>Household</h:title>
        <model>
            <instance>
                <data id="household" version="${openhds.tag.number}">
                    <openhdsTagName>${openhds.tag.name}</openhdsTagName>

                    <processedByMirth />
                    <householdName />
                    <householdId>12345</householdId>
                    <locationId>67890</locationId>
                    <headOfHouseholdId>09876</headOfHouseholdId>
                </data>
            </instance>
            <itext>
                <translation lang="eng">
                    <text id="/data/householdName:label">
                        <value>Name</value>
                    </text>
                    <text id="/data/householdName:hint">
                        <value />
                    </text>
                    <text id="/data/householdId:label">
                        <value>Individual Id</value>
                    </text>
                    <text id="/data/householdId:hint">
                        <value />
                    </text>
                    <text id="/data/locationId:label">
                        <value>Household Id</value>
                    </text>
                    <text id="/data/locationId:hint">
                        <value/>
                    </text>
                    <text id="/data/headOfHouseholdId:label">
                        <value>Gender</value>
                    </text>
                    <text id="/data/headOfHouseholdId:hint">
                        <value />
                    </text>
                </translation>
            </itext>
            <bind nodeset="/data/processedByMirth" type="boolean" readonly="true()"/>
            <bind nodeset="/data/householdId" type="string" readonly="true()"/>
            <bind nodeset="/data/locationId" type="string" readonly="true()"/>
            <bind nodeset="/data/headOfHouseholdId" type="string" readonly="true()"/>
            <bind nodeset="/data/householdName" type="string" required="true()" />
        </model>
    </h:head>
    <h:body>
        <input ref="/data/householdId">
            <label ref="jr:itext('/data/householdId:label')" />
            <hint ref="jr:itext('/data/householdId:hint')" />
        </input>
        <input ref="/data/locationId">
            <label ref="jr:itext('/data/locationId:label')" />
            <hint ref="jr:itext('/data/locationId:hint')" />
        </input>
        <input ref="/data/headOfHouseholdId">
            <label ref="jr:itext('/data/headOfHouseholdId:label')" />
            <hint ref="jr:itext('/data/headOfHouseholdId:hint')" />
        </input>
        <input ref="/data/householdName">
            <label ref="jr:itext('/data/householdName:label')" />
            <hint ref="jr:itext('/data/householdName:hint')" />
        </input>
    </h:body>
</h:html>
