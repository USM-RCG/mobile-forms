<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:jr="http://openrosa.org/javarosa">
    <h:head>
        <h:title>New Building</h:title>
        <model>
            <instance>
                <data id="new_building">
                    <processedByMirth />
                    <parentId />
                    <buildingLevel />
                    <fieldWorkerId />
                    <buildingNumber />
                    <buildingString />
                    <buildingId />
                    <buildingName />
                </data>
            </instance>
            <itext>
                <translation lang="eng">
                    <text id="/data/parentId:label">
                        <value>Parent Id</value>
                    </text>
                    <text id="/data/parentId:hint">
                        <value />
                    </text>
                    <text id="/data/buildingLevel:label">
                        <value>Building Level</value>
                    </text>
                    <text id="/data/buildingLevel:hint">
                        <value />
                    </text>
                    <text id="/data/fieldWorkerId:label">
                        <value>Field Worker Id</value>
                    </text>
                    <text id="/data/fieldWorkerId:hint">
                        <value />
                    </text>
                    <text id="/data/buildingNumber:label">
                        <value>Building Number</value>
                    </text>
                    <text id="/data/buildingNumber:hint">
                        <value />
                    </text>
                    <text id="/data/buildingString:label">
                        <value>Building String</value>
                    </text>
                    <text id="/data/buildingString:hint">
                        <value />
                    </text>
                    <text id="/data/buildingId:label">
                        <value>Building Id</value>
                    </text>
                    <text id="/data/buildingId:hint">
                        <value />
                    </text>
                    <text id="/data/buildingName:label">
                        <value>Building Name</value>
                    </text>
                    <text id="/data/buildingName:hint">
                        <value />
                    </text>
                </translation>
            </itext>
            <bind nodeset="/data/processedByMirth" type="boolean" />
            <bind nodeset="/data/parentId" type="string" required="true()" />
            <bind nodeset="/data/buildingLevel" type="string"
                required="true()" />
            <bind nodeset="/data/fieldWorkerId" type="string"
                required="true()" />
            <bind nodeset="/data/buildingNumber" type="int"
                required="true()" constraint="not(. &lt; 0 or . &gt; 99)" />
            <bind nodeset="/data/buildingString" type="string"
                readonly="true()"
                calculate="if(/data/buildingNumber &lt; 10, concat('0', /data/buildingNumber), /data/buildingNumber)" />
            <bind nodeset="/data/buildingId" type="string"
                readonly="true()"
                calculate="concat(/data/parentId, 'E', /data/buildingString)" />
            <bind nodeset="/data/buildingName" type="string"
                required="true()" />
        </model>
    </h:head>
    <h:body>
        <input ref="/data/parentId">
            <label ref="jr:itext('/data/parentId:label')" />
            <hint ref="jr:itext('/data/parentId:hint')" />
        </input>
        <input ref="/data/buildingLevel">
            <label ref="jr:itext('/data/buildingLevel:label')" />
            <hint ref="jr:itext('/data/buildingLevel:hint')" />
        </input>
        <input ref="/data/fieldWorkerId">
            <label ref="jr:itext('/data/fieldWorkerId:label')" />
            <hint ref="jr:itext('/data/fieldWorkerId:hint')" />
        </input>
        <input ref="/data/buildingNumber">
            <label ref="jr:itext('/data/buildingNumber:label')" />
            <hint ref="jr:itext('/data/buildingNumber:hint')" />
        </input>
        <input ref="/data/buildingId">
            <label ref="jr:itext('/data/buildingId:label')" />
            <hint ref="jr:itext('/data/buildingId:hint')" />
        </input>
        <input ref="/data/buildingName">
            <label ref="jr:itext('/data/buildingName:label')" />
            <hint ref="jr:itext('/data/buildingName:hint')" />
        </input>
    </h:body>
</h:html>
