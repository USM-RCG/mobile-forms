<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
    <h:head>
        <h:title>Pregnancy Observation</h:title>
        <model>
            <instance>
                <data id="pregnancy_observation">
                    <processedByMirth />
		    <needsReview />
                    <individualExtId />
                    <fieldWorkerExtId />
                    <visitExtId />
                    <expectedDeliveryDate />
                    <recordedDate />
                </data>
            </instance>
            <itext>
                <translation lang="Spanish">
                    <text id="/data/individualExtId:label">
                        <value>Madre Ext Id</value>
                    </text>
                    <text id="/data/individualExtId:hint">
                        <value />
                    </text>
                    <text id="/data/fieldWorkerExtId:label">
                        <value>Investigador de Campo ID Externa</value>
                    </text>
                    <text id="/data/fieldWorkerExtId:hint">
                        <value />
                    </text>
                    <text id="/data/visitExtId:label">
                        <value>Visit ID Externa</value>
                    </text>
                    <text id="/data/visitExtId:hint">
                        <value />
                    </text>
                    <text id="/data/expectedDeliveryDate:label">
                        <value>Fecha Tentativa</value>
                    </text>
                    <text id="/data/expectedDeliveryDate:hint">
                        <value />
                    </text>
                    <text id="/data/recordedDate:label">
                        <value>Fecha de la Observaci√≥n</value>
                    </text>
                    <text id="/data/recordedDate:hint">
                        <value />
                    </text>
                </translation>
                <translation lang="eng">
                    <text id="/data/individualExtId:label">
                        <value>Mother Ext Id</value>
                    </text>
                    <text id="/data/individualExtId:hint">
                        <value />
                    </text>
                    <text id="/data/fieldWorkerExtId:label">
                        <value>Field Worker Ext Id</value>
                    </text>
                    <text id="/data/fieldWorkerExtId:hint">
                        <value />
                    </text>
                    <text id="/data/visitExtId:label">
                        <value>Visit Ext Id</value>
                    </text>
                    <text id="/data/visitExtId:hint">
                        <value />
                    </text>
                    <text id="/data/expectedDeliveryDate:label">
                        <value>Expected Delivery Date</value>
                    </text>
                    <text id="/data/expectedDeliveryDate:hint">
                        <value />
                    </text>
                    <text id="/data/recordedDate:label">
                        <value>Recorded Date</value>
                    </text>
                    <text id="/data/recordedDate:hint">
                        <value />
                    </text>
                </translation>
            </itext>
            <bind nodeset="/data/processedByMirth" type="boolean" />
	    <bind nodeset="/data/needsReview" type="string" readonly="true()" />
            <bind nodeset="/data/individualExtId" type="string" required="true()" readonly="true()" />
            <bind nodeset="/data/fieldWorkerExtId" type="string" required="true()" readonly="true()" />
            <bind nodeset="/data/visitExtId" type="string" required="true()" readonly="true()" />
            <bind nodeset="/data/expectedDeliveryDate" type="date" required="true()" />
            <bind nodeset="/data/recordedDate" type="date" required="true()" />
        </model>
    </h:head>
    <h:body>
	<group appearance="field-list">
		<input ref="/data/individualExtId">
		    <label ref="jr:itext('/data/individualExtId:label')" />
		    <hint ref="jr:itext('/data/individualExtId:hint')" />
		</input>
		<input ref="/data/fieldWorkerExtId">
		    <label ref="jr:itext('/data/fieldWorkerExtId:label')" />
		    <hint ref="jr:itext('/data/fieldWorkerExtId:hint')" />
		</input>
		<input ref="/data/visitExtId">
		    <label ref="jr:itext('/data/visitExtId:label')" />
		    <hint ref="jr:itext('/data/visitExtId:hint')" />
		</input>
		<input ref="/data/recordedDate">
		    <label ref="jr:itext('/data/recordedDate:label')" />
		    <hint ref="jr:itext('/data/recordedDate:hint')" />
		</input>
	</group>
        <input ref="/data/expectedDeliveryDate">
            <label ref="jr:itext('/data/expectedDeliveryDate:label')" />
            <hint ref="jr:itext('/data/expectedDeliveryDate:hint')" />
        </input>
    </h:body>
</h:html>
