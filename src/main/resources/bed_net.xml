	    <bind nodeset="/data/processedByMirth" type="boolean" readonly="true()" />
	    <bind nodeset="/data/fieldWorkerExtId" type="string" readonly="true()" />
	    <bind nodeset="/data/distributionDateTime" type="datetime" readonly="true()" />
            <bind nodeset="/data/locationExtId" type="string" required="true()" readonly="true()"/>
	    <bind nodeset="/data/numberOfSleepingAreas" type="int" required="true()" />

	    <bind nodeset="/data/numberOfBednetsDistributed" type="int" required="true()"
			constraint=". > 0 and not(. > 10)" jr:constraintMsg="Min = 1, Max = 10"/>

	    <bind nodeset="/data/bednetId1" type="string" required="true()" />
	    <bind nodeset="/data/bednetId2" type="string" required="/data/numberOfBednetsDistributed > 1"
				relevant="/data/numberOfBednetsDistributed > 1"/>
	    <bind nodeset="/data/bednetId3" type="string" required="/data/numberOfBednetsDistributed > 2"
				relevant="/data/numberOfBednetsDistributed > 2"/>
	    <bind nodeset="/data/bednetId4" type="string" required="/data/numberOfBednetsDistributed > 3"
				relevant="/data/numberOfBednetsDistributed > 3"/>
	    <bind nodeset="/data/bednetId5" type="string" required="/data/numberOfBednetsDistributed > 4"
				relevant="/data/numberOfBednetsDistributed > 4"/>
	    <bind nodeset="/data/bednetId6" type="string" required="/data/numberOfBednetsDistributed > 5"
				relevant="/data/numberOfBednetsDistributed > 5"/>
	    <bind nodeset="/data/bednetId7" type="string" required="/data/numberOfBednetsDistributed > 6"
				relevant="/data/numberOfBednetsDistributed > 6"/>
	    <bind nodeset="/data/bednetId8" type="string" required="/data/numberOfBednetsDistributed > 7"
				relevant="/data/numberOfBednetsDistributed > 7"/>
	    <bind nodeset="/data/bednetId9" type="string" required="/data/numberOfBednetsDistributed > 8"
				relevant="/data/numberOfBednetsDistributed > 8"/>
	    <bind nodeset="/data/bednetId10" type="string" required="/data/numberOfBednetsDistributed > 9"
				relevant="/data/numberOfBednetsDistributed > 9"/>

